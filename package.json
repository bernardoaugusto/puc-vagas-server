{
  "name": "pucvagas",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "start": "node ./dist/shared/infra/http/server.js",
    "dev:server": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules src/shared/infra/http/server.ts tsc ",
    "typeorm": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "m:run": "npm run typeorm migration:run",
    "m:drop": "npm run typeorm schema:drop",
    "m:generate": "npm run typeorm migration:generate -- -n",
    "migration:revert": "typeorm migration:revert",
    "clean-database": "npm run typeorm schema:drop && npm run typeorm migration:run",
    "test": "jest",
    "clean-jest": "jest --clearCache",
    "tdd": "jest --watch --verbose=true"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@seidor-cloud-produtos/typeorm": "^0.0.4",
    "aws-sdk": "^2.868.0",
    "bcryptjs": "^2.4.3",
    "celebrate": "^12.1.2",
    "class-transformer": "^0.2.3",
    "cors": "^2.8.5",
    "date-fns": "^2.14.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "handlebars": "^4.7.7",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.5",
    "nodemailer": "^6.5.0",
    "pg": "^8.2.1",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.0.0",
    "ts-node-dev": "^1.0.0-pre.49",
    "tsyringe": "^4.3.0",
    "typeorm": "^0.2.31",
    "uuidv4": "^6.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.4",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongodb": "^3.6.10",
    "@types/nodemailer": "^6.4.1",
    "@types/socket.io": "^2.1.13",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^6.0.0",
    "jest": "^26.1.0",
    "lint-staged": "^10.5.4",
    "pre-push": "^0.1.1",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.2",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "^3.9.5"
  },
  "pre-push": {
    "silent": true,
    "run": [
      "build"
    ]
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint src --ext .ts",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
